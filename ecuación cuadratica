//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main ()
{
	float A,B,C,D,X,X1,X2,XI,XR;
	cout<<"Ingrese A: ";
	cin>> A;
	if (A==0)
		cout<<"Error";
	else 
	{
	cout<<"Ingrese B: ";
	cin>> B;
	cout<<"Ingrese C: ";
	cin>> C;

	D=pow(B,2)-4*A*C;
	if (D>=0)
		if (D==0)
		{X=-B/(2*A);
	     cout<<"Solucion unica: "<<X;
        }
		else
		{X1=-B+sqrt(D)/(2*A);
	     X2=-B-sqrt(D)/(2*A);
		 cout<<"Solucion real 1: "<<X1;
		 cout<<"Solucion real 2: "<<X2;
         }
	else
	{XR=-B/(2*A);
	 X1=sqrt(-D)/(2*A);
     cout<<"La solucion Imaginaria 1 es: "<<XR<<"+"<<XI<<"i";
	 cout<<"La solucion Imaginaria 2 es: "<<XR<<"-"<<XI<<"i";
	}
	}
    getch() ;
}

