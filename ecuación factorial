// ecuaci√≥n factorial.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;

void main()
{
	float S, x;
	int N, i, fact, flag;
	S=0; // Acumulador de suma
	flag=-1 // inicia la serie en negativo
	fact=1 // Acumulador de producto
	cout<<"ingrese el numero de elementos de la serie: ";
	cin>> N;
	cout<<"ingrese el valor de x: ";
	cin>> x;
	for ( i=1; i<=N;i=i+2)
	{
		S=S+flag*(pow(x,i)/fact);
		fact=fact*(i+1)*(i+2);
	}
	cout<<"La suma es: "<< S;
	getch();
